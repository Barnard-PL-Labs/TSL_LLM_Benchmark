always assume {
  // Ensure that no two directional keys can be pressed simultaneously
  !((pressL && pressR) || (pressL && pressUp) || (pressL && pressDown) ||
    (pressR && pressUp) || (pressR && pressDown) || (pressUp && pressDown));
}

always guarantee {
  // When the left key (L) is pressed and not at the leftmost position, move the ship left
  (pressL && !leftmost(ship)) -> [ship <- moveLeft(ship)];
  
  // When the right key (R) is pressed and not at the rightmost position, move the ship right
  (pressR && !rightmost(ship)) -> [ship <- moveRight(ship)];
  
  // Trigger shoot action when shoot key (S) is pressed
  pressShoot -> [ship <- shoot(ship)];
  
  // Handle the ship being hit
  hit(ship) -> [ship <- die(ship)];
}
