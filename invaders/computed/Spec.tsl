// Define the basic Temporal Stream Logic (TSL) setup for a space invaders ship control system
always assume {
    !(pressA(e) && pressD(e));    
    !(pressA(e) && pressSpace(e)); 
    !(pressD(e) && pressSpace(e)); 
}

always guarantee {
    pressA(e) && !leftmost(ship) -> ([ship.position.x <- moveLeft(ship)]);
    pressD(e) && !rightmost(ship) -> ([ship.position.x <- moveRight(ship)]);
    pressSpace(e) -> X(shoot(ship));
    hit(ship) -> [ship.state <- die(ship)];  
}
