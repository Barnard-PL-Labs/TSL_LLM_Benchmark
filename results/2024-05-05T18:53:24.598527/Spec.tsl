always assume {
    // User actions for pressing or not pressing the up key
    (pressUp || !pressUp);
}

always guarantee {
    // When the up key is pressed, increment the counter
    pressUp -> [count <- count + 1];

    // When the up key is not pressed, set the counter to 0.5
    !pressUp -> [count <- 0.5];

    // Update cube's scale.x with the value of the counter
    [cube.scale.x <- count];
}
