always assume {
  // Assume that no two buttons are pressed simultaneously, ensuring mutual exclusion
  !(pressButtonE4 && pressButtonG4);
  !(pressButtonE4 && pressButtonA4);
  !(pressButtonG4 && pressButtonA4);
}

always guarantee {
  // When button E4 is pressed, set the noteToPlay variable to "E4"
  pressButtonE4 -> [noteToPlay <- "E4"];
  // When button G4 is pressed, set the noteToPlay variable to "G4"
  pressButtonG4 -> [noteToPlay <- "G4"];
  // When button A4 is pressed, set the noteToPlay2 variable to "A4"
  pressButtonA4 -> [noteToPlay2 <- "A4"];
}
