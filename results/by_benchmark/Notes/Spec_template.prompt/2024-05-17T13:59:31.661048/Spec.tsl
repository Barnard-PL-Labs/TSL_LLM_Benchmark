always assume {
  // Describe the availability of three buttons which can be pushed by the user
  true; // No specific assumptions about the environment other than the buttons being pushed
}

always guarantee {
  // Mapping of button presses to musical notes
  button1 -> X ([noteToPlay <- "E4"]);
  button2 -> X ([noteToPlay <- "G4"]);
  button3 -> X ([noteToPlay2 <- "A4"]);

  // Ensure that if A4 is played on noteToPlay2, then E4 cannot be played on noteToPlay at the same time
  ([noteToPlay2 <- "A4"]) -> !(noteToPlay == "E4");

  // A4 cannot be played on noteToPlay2 until E4 has stopped being played on noteToPlay
  ([noteToPlay <- "E4"]) -> F (![noteToPlay <- "E4"] && [noteToPlay2 <- "A4"]);

  // If E4 is played on noteToPlay, then A4 must eventually be played on noteToPlay2 and G4 on noteToPlay
  ([noteToPlay <- "E4"]) -> F ([noteToPlay2 <- "A4"] && [noteToPlay <- "G4"]);
}
