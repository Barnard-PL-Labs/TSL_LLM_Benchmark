always assume {
  // No two counter operations can be performed at the same time
  !(pressA && pressB);
  !(pressB && pressC);
  !(pressA && pressC);
}

always guarantee {
  // Increment counter based on button push
  pressA -> ([count <- count + stepsize]);
  pressB -> ([count <- count + 2] && [stepsize <- 1]);
  pressC -> ([count <- count + 3] && [stepsize <- 1]);

  // Manipulate stepsize based on sequence of pressA
  (X(pressA) && X(X(pressA)) && X(X(X(pressA)))) -> [stepsize <- multiplyByThree(stepsize)];
}
