always assume {
  // Mutual exclusion for key inputs:
  !(pressLeft && pressRight);
  !(pressLeft && pressUp);
  !(pressLeft && pressDown);
  !(pressRight && pressUp);
  !(pressRight && pressDown);
  !(pressUp && pressDown);
}

always guarantee {
  // Handling the ship being hit:
  hit(ship) -> [die(ship)];

  // Left movement:
  pressLeft && !leftmost(ship) -> [moveLeft(ship)];
  
  // Right movement:
  pressRight && !rightmost(ship) -> [moveRight(ship)];
  
  // Shooting action:
  pressShoot -> [shoot(ship)];
}
