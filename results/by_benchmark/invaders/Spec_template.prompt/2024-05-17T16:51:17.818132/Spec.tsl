always assume {
  // Mutual Exclusion for Key Inputs: No two directional keys can be pressed simultaneously
  !(pressL && pressR);
  !(pressL && pressUp);
  !(pressL && pressDown);
  !(pressR && pressUp);
  !(pressR && pressDown);
  !(pressUp && pressDown);
}

always guarantee {
  // Ship Hit Detection: If hit, end game or lose life.
  hit(ship) -> [die(ship)];

  // Left Movement: If left key is pressed and not at the leftmost, move left
  (pressL && !leftmost(ship)) -> [moveLeft(ship)];

  // Right Movement: If right key is pressed and not at the rightmost, move right
  (pressR && !rightmost(ship)) -> [moveRight(ship)];

  // Shooting Action: If shoot key is pressed, trigger shooting function
  pressS -> [shoot(ship)];
}
