always assume {
  // Mutual Exclusion for Key Inputs:
  !(pressL && pressR);
  !(pressL && pressUp);
  !(pressL && pressDown);
  !(pressR && pressUp);
  !(pressR && pressDown);
  !(pressUp && pressDown);
  // Ship Hit Detection:
  hit(ship) -> [dead(ship) <- 1];
}

always guarantee {
  // Movement and Actions:
  // Left Movement:
  (pressL && !leftmost(ship)) -> [ship <- moveLeft(ship)];
  // Right Movement:
  (pressR && !rightmost(ship)) -> [ship <- moveRight(ship)];
  // Shooting Action:
  pressS -> [ship <- shoot(ship)];
  // If ship is hit:
  hit(ship) -> [ship <- die(ship)];
}
