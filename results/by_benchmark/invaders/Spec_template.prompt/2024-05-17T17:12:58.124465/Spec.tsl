always assume {
  // Mutual exclusion for key inputs
  !(pressL && pressR);
  !(pressL && pressUp);
  !(pressL && pressDown);
  !(pressR && pressUp);
  !(pressR && pressDown);
  !(pressUp && pressDown);
}

always guarantee {
  // Ship hit detection
  hit(ship) -> [die(ship)];
  
  // Left Movement
  pressL -> (leftmost(ship) -> [ship <- ship]; !leftmost(ship) -> [moveLeft(ship)]);
  
  // Right Movement
  pressR -> (rightmost(ship) -> [ship <- ship]; !rightmost(ship) -> [moveRight(ship)]);
  
  // Shooting Action
  pressS -> [shoot(ship)];
}
