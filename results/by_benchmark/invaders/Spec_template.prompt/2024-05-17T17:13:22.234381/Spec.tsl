always assume {
  // Mutual Exclusion for Key Inputs
  !(pressL && pressR);
  !(pressL && pressUp);
  !(pressL && pressDown);
  !(pressR && pressUp);
  !(pressR && pressDown);
  !(pressUp && pressDown);
}

always guarantee {
  // Left Movement
  (pressL && !leftmost(ship)) -> [ship <- moveLeft(ship)];

  // Right Movement
  (pressR && !rightmost(ship)) -> [ship <- moveRight(ship)];

  // Shooting Action
  pressShoot -> [ship <- shoot(ship)];

  // Ship Hit Detection
  hit(ship) -> [ship <- die(ship)];
}
