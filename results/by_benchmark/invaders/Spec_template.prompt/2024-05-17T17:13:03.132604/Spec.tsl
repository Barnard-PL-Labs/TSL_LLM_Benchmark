always assume {
  // Ensure mutual exclusivity of directional keys (L, R, Up, Down)
  !(pressL && pressR);
  !(pressL && pressUp);
  !(pressL && pressDown);
  !(pressR && pressUp);
  !(pressR && pressDown);
  !(pressUp && pressDown);
}

always guarantee {
  // If the ship is hit, trigger the die function
  hit(ship) -> [die(ship)];

  // Handling left movement - the ship should not move left if it's already at the leftmost position
  (pressL && !leftmost(ship)) -> [moveLeft(ship)];

  // Handling right movement - the ship should not move right if it's at the rightmost position
  (pressR && !rightmost(ship)) -> [moveRight(ship)];

  // Trigger shooting mechanism when shoot key is pressed
  pressShoot -> [shoot(ship)];
}
