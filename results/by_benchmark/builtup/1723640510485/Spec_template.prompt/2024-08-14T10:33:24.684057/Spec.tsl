always assume {
    for i in 1..4 {
        F (r i); // Eventually, each truck i will make a request to go across the bridge
    }
}

always guarantee {
    for i in 1..4 {
        (r i) -> F ([g <- i]); // If truck i makes a request, eventually it will be granted access
    }

    // Specific coinflip and granting conditions
    (p 1 2) && ([g <- 3]) -> !([g <- 1]) W ([g <- 2]);
    (p 1 2) && ([g <- 4]) -> !([g <- 1]) W ([g <- 2]);
    (p 1 3) && ([g <- 2]) -> !([g <- 1]) W ([g <- 3]);
    (p 1 3) && ([g <- 4]) -> !([g <- 1]) W ([g <- 3]);
    (p 1 4) && ([g <- 2]) -> !([g <- 1]) W ([g <- 4]);
    (p 1 4) && ([g <- 3]) -> !([g <- 1]) W ([g <- 4]);
    (p 2 1) && ([g <- 3]) -> !([g <- 2]) W ([g <- 1]);
    (p 2 1) && ([g <- 4]) -> !([g <- 2]) W ([g <- 1]);
    (p 2 3) && ([g <- 1]) -> !([g <- 2]) W ([g <- 3]);
    (p 2 3) && ([g <- 4]) -> !([g <- 2]) W ([g <- 3]);
}
