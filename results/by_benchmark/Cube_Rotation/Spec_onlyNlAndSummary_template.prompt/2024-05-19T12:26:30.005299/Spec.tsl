always assume {
  // Assumption that left and right buttons are not pressed at the same time
  !(pressLeft && pressRight);
}

always guarantee {
  // Guarantee that pressing the left button starts the cube rotating left and continues until the right button is pressed
  pressLeft -> [cube.rotationDirection <- "left"] W pressRight;

  // Guarantee that pressing the right button starts the cube rotating right and continues until the left button is pressed
  pressRight -> [cube.rotationDirection <- "right"] W pressLeft;
}
