always assume {
  // Ensure left and right buttons are not pressed simultaneously
  !(pressLeft && pressRight);
}

always guarantee {
  // If the left button is pressed, rotate to the left until the right button is pressed
  pressLeft -> ([cube.rotation <- "left"] W pressRight);

  // If the right button is pressed, rotate to the right until the left button is pressed
  pressRight -> ([cube.rotation <- "right"] W pressLeft);
}
