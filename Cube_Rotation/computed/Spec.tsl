always assume {
  // Assumption: left and right buttons are never pressed simultaneously.
  !(pressL(e) && pressR(e));
}

always guarantee {
  // Guarantee: if the left button is pressed, the cube should rotate left until the right button is pressed.
  pressL(e) -> ([ cube <- rotateLeft(cube) ] W pressR(e));

  // Guarantee: if the right button is pressed, the cube should rotate right until the left button is pressed.
  pressR(e) -> ([ cube <- rotateRight(cube) ] W pressL(e));
}
